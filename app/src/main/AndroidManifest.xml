<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mkr.globalnews">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".GlobalNewsApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GlobalNews"
        android:usesCleartextTraffic="true">
        <activity android:name=".presentations.activity.SearchActivity" >
        </activity>
        <activity android:name=".presentations.activity.BookMarkActivity" />
        <activity android:name=".presentations.activity.DetailActivity" />
        <activity android:name=".presentations.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>